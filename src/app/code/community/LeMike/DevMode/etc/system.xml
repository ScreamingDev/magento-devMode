<?xml version="1.0" ?>
<config>
    <sections>
        <dev>
            <groups>
                <lemike_devmode translate="label">
                    <label>DevMode</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_translate</backend_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>

                        <show_toolbox translate="label">
                            <label>Show toolbox in frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_translate</backend_model>
                            <sort_order>105</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_toolbox>

                        <allow_restricted_ip_only>
                            <label>Restricted IPs only</label>
                            <comment>
                                As configured in dev/restrict/allow_ips.
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_restricted_ip_only>


                        <ideRemoteCallEnabled translate="label">
                            <label>Enable IDE remote call</label>
                            <comment>
                                <![CDATA[Install the
                                <a href="http://plugins.jetbrains.com/plugin/6027?pr=phpStorm"
                                 >"Remote Call" plugin</a>
                                in PHPStorm to enable links from toolbox to the according
                                file in IDE.]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ideRemoteCallEnabled>
                        <remoteCallUrlTemplate translate="label">
                            <label>Remote call url template</label>
                            <comment>
                                <![CDATA[First %s will be replaced by file, second %s by line number]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>125</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </remoteCallUrlTemplate>

                        <admin_login_user>
                            <label>Auto-login</label>
                            <comment>
                                Auto login to the backend as this user if you work local
                                (from 127.0.0.1).
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>lemike_devmode/admin_system_config_admin</source_model>
                            <sort_order>115</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </admin_login_user>


                        <heading_core translate="label">
                            <label>Core</label>
                            <frontend_model>
                                adminhtml/system_config_form_field_heading
                            </frontend_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_core>


                        <core_email_active>
                            <label>Send mails</label>
                            <comment>
                                Turn sending mails on/off.
                                If off ("No") then it will output mails directly to the browser.
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>210</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </core_email_active>
                        <core_email_recipient>
                            <label>Recipient of all mail</label>
                            <comment>
                                This will override all mail recipients and deliver the mail
                                to the given address.
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>215</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </core_email_recipient>

                        <heading_customer translate="label">
                            <label>Customer</label>
                            <frontend_model>
                                adminhtml/system_config_form_field_heading
                            </frontend_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_customer>

                        <customer_password>
                            <label>Maintenance Password</label>
                            <comment>
                                <![CDATA[
                                <strong>Caution: Raw text!</strong><br />
                                Password which what you can login in every account.
                                Keep it simple, it will have no encryption.
                                ]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>310</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customer_password>
                    </fields>
                </lemike_devmode>
            </groups>
        </dev>
    </sections>
</config>
