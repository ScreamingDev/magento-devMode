<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         name="LeMike Magento Ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Ruleset to assure good code with respecting some stupid Magento design.
        Yee, I said stupid.
    </description>


    <rule ref="rulesets/cleancode.xml">
        <exclude name="StaticAccess" />
        <exclude name="ElseExpression" />
    </rule>

    <!-- Import the entire cyclomatic complexity rule -->
    <rule ref="rulesets/codesize.xml"/>

    <!-- Import entire controversial rule set -->
    <rule ref="rulesets/controversial.xml">
        <!-- There will be _ infix for class names. -->
        <exclude name="CamelCaseClassName"/>
        <!-- There will be _ prefix for protected methods. -->
        <exclude name="CamelCaseMethodName"/>
        <!-- There will be _ prefix for protected properties. -->
        <exclude name="CamelCasePropertyName"/>
        <!-- There will be _ prefix for local variables. -->
        <exclude name="CamelCaseVariableName"/>
    </rule>

    <!-- Import the entire design rule set -->
    <rule ref="rulesets/design.xml"/>

    <!-- Import entire naming rule set -->
    <rule ref="rulesets/naming.xml"/>

    <!-- Import the entire unused code rule set -->
    <rule ref="rulesets/unusedcode.xml"/>
</ruleset>
