<?xml version="1.0" ?>
<layout>
    <default>
        <reference name="notifications">
            <block type="adminhtml/template" name="lemike.devmode.notifications"
                   template="lemike/devmode/notifications.phtml"
                   before="-"></block>
        </reference>
    </default>

    <adminhtml_developer_about>
        <reference name="content">
            <block type="adminhtml/template" name="content.about" as="about"
                   template="lemike/devmode/about.phtml"/>
        </reference>
    </adminhtml_developer_about>

    <adminhtml_developer_catalog_index>
        <reference name="js">
            <block type="adminhtml/template" template="lemike/devmode/catalog/js.phtml"
                   name="lemike.devmode.catalog.product.js" as="product_js"></block>
        </reference>
        <reference name="left">
            <block type="lemike_devmode/catalog_tabs" name="lemike.devmode.catalog.tabs"/>
        </reference>
        <reference name="content">
            <block type="adminhtml/template" name="content.catalog" as="catalog"
                   template="lemike/devmode/catalog/overview.phtml"/>
        </reference>
    </adminhtml_developer_catalog_index>

    <adminhtml_developer_sales_index>
        <reference name="js">
            <block type="adminhtml/template" template="lemike/devmode/sales/js.phtml"
                   name="lemike.devmode.sales.js" as="sales_js"></block>
        </reference>
        <reference name="left">
            <block type="lemike_devmode/sales_tabs" name="lemike.devmode.sales.tabs"/>
        </reference>
        <reference name="content">
            <block type="adminhtml/template" name="content.sales" as="sales"
                   template="lemike/devmode/sales/overview.phtml"/>
        </reference>
    </adminhtml_developer_sales_index>

    <adminhtml_developer_customer_index>
        <reference name="js">
            <block type="adminhtml/template" template="lemike/devmode/customer/js.phtml"
                   name="customer.js" as="customer_js"></block>
        </reference>
        <reference name="left">
            <block type="lemike_devmode/customer_tabs" name="customer.tabs"/>
        </reference>
        <reference name="content">
            <block type="adminhtml/template" name="content.customer" as="customer"
                   template="lemike/devmode/customer/overview.phtml"/>
        </reference>
    </adminhtml_developer_customer_index>
</layout>
